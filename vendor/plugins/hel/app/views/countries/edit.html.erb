<%= error_messages_for :target  %>
<h3>Modifica</h3>

<%= link_to 'Elenco', countries_path %>
<%= link_to 'Nuovo', new_country_path %>
<%= link_to 'Delete', country_path(@target), :confirm => "Vuoi veramente eliminare la country?", :method => :delete %>
<p>&nbsp;</p>


<% form_for @target , :url=>country_path(@target) do | f | -%>

	<p><label for="collection">Nome</label>
	<%= f.text_field :name, :class => 'text' %></p>
	
	<p><label for="collection">a2</label>
	<%= f.text_field :a2, :class => 'text' %></p>	

	<p><label for="collection">a3</label>
	<%= f.text_field :a3, :class => 'text' %></p>	

	<p><label for="collection">num</label>
	<%= f.text_field :num, :class => 'text' %></p>	
	
	<p><label>&nbsp;</label>
		<%= submit_tag 'Crea' %>
	</p>	
<% end -%>
