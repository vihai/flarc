<script src="http://maps.google.com/maps?file=api&amp;v=2.x&amp;key=ABQIAAAAVJLfFXWBxmyHNCyIIApsnxSc2yIvQoNUWDuSwbldoVMAKYyAbxTszy7ZWfIeC7-Gq8AF07pCq9le4A" type="text/javascript"></script> 
<script type="text/javascript">

$(document).ready(function() {
  var map;
  var mapTypes = [];
  mapTypes.push(G_SATELLITE_MAP);
  mapTypes.push(G_PHYSICAL_MAP);
  
  if (GBrowserIsCompatible()) {
    map = new GMap2(document.getElementById("map"), {mapTypes:mapTypes});
    map.setCenter(new GLatLng(45.80922,8.773513),12);
    map.setMapType(G_PHYSICAL_MAP);
  
    map.addControl(new GLargeMapControl());
    map.addControl(new GMapTypeControl());
    map.enableContinuousZoom();
  
    geoXml = new GGeoXml("<%= flight_path(@flight, :format => "kml", :only_path => false) %>", function() {geoXml.gotoDefaultViewport(map);});
    map.addOverlay(geoXml);
  
  //  geoXml2 = new GGeoXml("http://csvva.orlandi.com/orografia.kmz");
  //  map.addOverlay(geoXml2);
  }
});
</script>
