<!DOCTYPE html>
<html lang="en">
<head>
  <title>Campionato CSVVA</title>
  <meta charset="UTF-8" />
  <%= raw include_stylesheets :csvva, :media => 'all' %>
  <%= raw include_javascripts :csvva %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="header">
  <div id="text">
    Campionato di Distanza CSVVA 2011
  </div>
  <div id="right_text">
    <% cfs = Championship.find_by_symbol(:csvva_2011).championship_flights %>
    <strong><%= cfs.count %></strong> voli<br />
    <strong><%= fmt_distance_in_km(cfs.sum(:distance).to_i)  %></strong>
  </div>
</div>

<div id="menu">
<ul>
  <li>
    Principale<br />
    <ul>
      <li><%= link_to('Home', root_path) %></li>
      <li><%= link_to('Regolamento', 'http://www.acao.it/download/doc_download/155-regolamento-campionato-csvva-2011.html') %></li>
      <li><%= link_to('Contatti', static_path('csvva/contacts')) %></li>
      <li><%= link_to('Campionati precedenti', championships_path) %></li>
    </ul>
  </li>
  <li>
    Classifiche
    <ul>
      <li><%= link_to('Junior', ranking_path('csvva_junior_2011')) %></li>
      <li><%= link_to('Expert', ranking_path('csvva_expert_2011')) %></li>
      <li><%= link_to('Master', ranking_path('csvva_master_2011')) %></li>
      <li><%= link_to('SuperMaster', ranking_path('csvva_supermaster_2011')) %></li>
      <li><%= link_to('Trofeo Tamborini', ranking_path('csvva_tt_2011')) %></li>
    </ul>
  </li>
  <li>Elenchi
    <ul>
      <li><%= link_to('Voli', calendar_flights_path(:year => Time.now.year, 'championships.symbol' => :csvva_2011)) %></li>
      <li><%= link_to('Piloti', pilots_path('championships.symbol' => 'csvva_2011',
                                            :sort => 'person.last_name,person.first_name')) %></li>
      <li><%= link_to('Alianti', planes_path) %></li>
    </ul>
  </li>
  <li>
    <% if !asgard_session || !asgard_session.authenticated? %>
      <div class="menulogin">
        <%= link_to('Registrati', registration_path) %><br />
        <%= link_to_function 'Login', "jQuery('#login-dialog').dialog('open')" %><br />
      </div>
    <% else %>
      <div class="userdata userdata_<%= asgard_session.authenticated_admin? ? 'admin' : (asgard_session.authenticated? ? 'authenticated' : '') %>">

        <div>
          <strong><%= auth_person.name %></strong>
          <br style="clear: both" />
        </div>
      <ul>
        <li><%= link_to 'Pagina personale', static_path('user_home') %></li>
      <% if !auth_person.pilot ||
            !auth_person.pilot.championships.include?(Championship.find_by_symbol(:csvva_2011))  %>
        <li><%= link_to 'Iscrizione', csvva_registration_path %>
      <% else %>
        <li><%= link_to('Invia il tuo volo', new_igc_tmp_file_path()) %></li>
        <li><%= link_to 'I tuoi voli', flights_path(:pilot_id => auth_person.pilot.id) %></li>
      <% end %>

      <% if asgard_session && asgard_session.authenticated_admin? %>
        <li><%= link_to 'Amministrazione', static_path('administration_home') %></li>
      <% end %>
        <li><%= link_to 'Logout', ygg_asgard_session_logout_path, :method => 'post', :remote => true, :id => 'logout_link' %></li>
      </ul>
      </div>
    <% end %>
  </li>
</ul>
</div>

<div id="body">
<% flash.each do |css_class, message| %>
<p class="<%= css_class %>"><span></span><%= message %></p>
<% end %>

<%= yield  %>
</div>

<div id="password-recovery-dialog" title="Recupero Password" style="display: none">
  <div id="password-recovery-dialog-alert" class="freeow freeow-center" style="position: absolute"></div>
  <form class="ui-widget">
    <table>
      <tr>
        <th><label for="fqda">e-Mail</label></th>
        <td><input type="text" name="fqda" id="fqda"></td>
      </tr>
    </table>
  </form>
</div>
<script type="text/javascript">
//<![CDATA[
$(function() {

  $("#password-recovery-dialog").dialog({
    autoOpen: false,
    width: 500,
    height: 200,
    modal: true,
    buttons: {
      'Ok': function() {
        $.ajax({
          url: '<%= csvva_registration_recover_password_path %>',
          dataType: 'json',
          type: 'POST',
          contentType: 'application/json; charset=utf-8',
          data: JSON.stringify({ fqda: $('#fqda').val() }),
          success: function(data) {
            if (data.success) {
              $('#password-recovery-dialog').dialog('close');
              $("#freeow").freeow("Password inviata", "La password ti Ã¨ stata inviata per e-Mail");
            } else {
              $("#password-recovery-dialog-alert").freeow("Errore", data.error);
            }
          },
        });
      },
      'Annulla': function() {
        $(this).dialog("close");
      }
    },
  });
});
//]]>
</script>




<script type="text/javascript">
//<![CDATA[
jQuery(function($) {
  $("#logout_link").bind("ajax:complete", function(event, data, status, xhr) { window.location = '/'; });
});
//]]>
</script>


<div id="login-dialog" title="Login" style="display: none">
  <div id="login-dialog-alert" class="freeow freeow-center" style="position: absolute"></div>
  <form id="login-dialog-form" class="ui-widget" target="login_iframe">
    <table>
      <tr>
        <th><label for="username">e-Mail</label></th>
        <td><input type="text" name="username" id="username"></td>
      </tr>
      <tr>
        <th><label for="password">Password</label></th>
        <td><input type="password" name="password" id="password"></td>
      </tr>
    </table>
    <input type="submit" name="login-dialog-submit" id="login-dialog-submit" style="display: none"  />
  </form>
  <%= link_to_function 'Ho dimenticato la password', "jQuery('#password-recovery-dialog').dialog('open')" %><br />
  <iframe id="login_iframe" name="login_iframe" style="display: none;"></iframe>
</div>

<script type="text/javascript">
//<![CDATA[
$(function() {

  $("#login-dialog").dialog({
    autoOpen: false,
    width: 500,
    height: 200,
    modal: true,
    buttons: {
      'Ok': function() {
        $.ajax({
          url: '<%= ygg_asgard_session_authenticate_by_fqda_and_password_path %>',
          dataType: 'json',
          type: 'POST',
          contentType: 'application/json; charset=utf-8',
          data: JSON.stringify({ username: $('#username').val(), password: $('#password').val() }),
          success: function(data) {
            if (data.authenticated) {
              $("#login-dialog").hide("slow");
              $("#login-dialog-submit").click();
              window.location = '<%= static_path('user_home') %>';
            } else
              $("#login-dialog-alert").freeow("Errore", "Username o password errati");
          },
          error: function(data) {
            $("#login-dialog-alert").freeow("Errore", "Errore di comunicazione");
          }
        });
      },
      'Annulla': function() {
        $(this).dialog("close");
      }
    },
    open: function() {
    },
    close: function() {
      allFields.val( "" ).removeClass( "ui-state-error" );
    }
  });
});
//]]>
</script>

<div id="freeow" class="freeow freeow-bottom-right"></div>

</body>
</html>
